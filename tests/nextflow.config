params {
    // Test parameters
    outdir = "output"
}

process {
    withName: 'COMPILE_BINARY' {
        container = 'community.wave.seqera.io/library/gcc_make_zstd:4e7dbefa884f3ea1'
    }
}
 
// enable Docker and wave support
docker.enabled = true
wave.enabled = true

profiles {
    github_ci {
        process {
            // Global CPU limit for GitHub Actions
            cpus = 2
            
            // Override specific resource-intensive processes
            withName: 'SPLIT_INTERLEAVE' {
                cpus = 2  
                memory = { 2.GB }
            }
        }
    }
}
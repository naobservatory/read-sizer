params {
    // Test parameters
    outdir = "output"
}

profiles {
    github_ci {
        process {
            // Global CPU limit for GitHub Actions
            cpus = 2
            
            // Override specific resource-intensive processes
            withName: 'SPLIT_INTERLEAVE' {
                cpus = 1
                memory = { 2.GB }
            }

            withName: 'GENERATE_SAMPLESHEET' {
                cpus = 1  
                memory = { 2.GB }
            }

            withName: 'COMPILE_BINARY' {
                cpus = 1  
                memory = { 2.GB }
            }
        }
    }
}
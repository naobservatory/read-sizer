params {
    // Test parameters
    outdir = "output"
}

process {
    withName: 'COMPILE_BINARY' {
        container = 'community.wave.seqera.io/library/gcc_make_zstd:4e7dbefa884f3ea1'
    }
}
 
// enable Docker and wave support
docker.enabled = true
docker.runOptions = '-v $HOME/.aws/credentials:/credentials -e AWS_SHARED_CREDENTIALS_FILE=/credentials'
wave.enabled = true

profiles {
    github_ci {
        process {
            // Global CPU limit for GitHub Actions
            cpus = 2
            
            // Override specific resource-intensive processes
            withName: 'SPLIT_INTERLEAVE' {
                cpus = 2  // Reduced from 6 to match GitHub's limit
                memory = { 2.GB }
            }
        }

        // AWS S3 configuration for public bucket access
        process.env = [
            'AWS_REGION': 'us-east-1',  // Set default region
            'AWS_EC2_METADATA_DISABLED': 'true'  // Disable metadata service checks
        ]
        
        aws {
            client {
                // Add --no-sign-request flag to enable anonymous access to public buckets
                s3cmd = { it + ' --no-sign-request' }
            }
        }
    }
}